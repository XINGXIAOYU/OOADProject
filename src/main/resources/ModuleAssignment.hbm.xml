<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ooad.bean.ModuleAssignment" table="module_assignment">
        <meta attribute="class-description">
            This class contains the post detail.
        </meta>
        <id name="id" type="int" column="idmodule_assignment">
            <generator class="native"/>
        </id>
        <property name="assignmentID" column="assignment_id" type="int"/>
        <property name="moduleID" column="module_id" type="int"/>
    </class>
</hibernate-mapping>